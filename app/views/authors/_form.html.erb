<%= form_for(author) do |f| %>
	<% if author.errors.any? %>
		<div class="alert alert-danger">
			<% author.errors.full_messages.each do |msg| %>
				<p><%= msg %></p>
			<% end %>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>
