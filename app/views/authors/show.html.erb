<h1><%= @author.name %></h1>

<table id="books_table" class="table">
	<tr>
		<th>Book name</th>
		<th>Book year</th>
		<th>Book ISBN</th>
	</tr>
	<% (@author.books).each do |book| %>
	<tr>
		<td><%= link_to book.name, book %></td>
		<td><%= book.year %></td>
		<td><%= book.isbn %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Back', authors_path %>
