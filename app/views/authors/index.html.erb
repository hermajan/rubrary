<div class="pull-right">
	<% if current_user.try(:admin?) %>
		<%= link_to 'New', new_author_path, class: 'btn btn-success' %>
	<% end %>
</div>

<h1>Authors</h1>

<table id="authors_table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
		  <td><%= author.name %></td>
		  <td><%= link_to 'Show', author, class: 'btn btn-default' %></td>
		  <% if current_user.try(:admin?) %>
		  	<td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-warning'  %></td>
		  	<td><%= link_to 'Remove', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
		  <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
