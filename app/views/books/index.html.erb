<h1>Books <%= link_to 'New', new_book_path, class: 'btn btn-success' %></h1>

<table id="books_table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Year</th>
	  <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
		  <td><%= book.name %></td>
		  <td><%= book.author %></td>
		  <td><%= book.year %></td>
		  <td><%= book.isbn %></td>
		  <td><%= link_to 'Show', book, class: 'btn btn-default' %></td>
		  <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning'  %></td>
		  <td><%= link_to 'Remove', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
